<% index = 3 %>
<%= course_form.fields_for :courses do |f| %>
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="panel-title">
					<div class="row">
						<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse_<%= !f.options[:child_index].nil? ? f.options[:child_index] : index %>">
						<div class="col-sm-12"><h5>Course Details</h5></div></a>
					</div>
			</div>
		</div>
		<div id="collapse_<%= !f.options[:child_index].nil? ? f.options[:child_index] : index %>" class="panel-collapse collapse">
			<div class="panel-body form-group">
				<div class="row">
					<div class="col-sm-2">
						<label for="course-name" class="control-label">Course Name</label>
					</div>
					<div class="col-sm-4">
						<%= f.text_field :name, :class => "form-control" %>
					</div>
					<div class="col-sm-2">
						<label for="trainer-name" class="control-label">Name of Trainer</label>
					</div>
					<div class="col-sm-4">
						<%= f.text_field :trainer_name, :class => "form-control" %>
					</div>
				</div>
				<div class="seperator10"></div>
				<div class="row">
					<div class="col-sm-2">
						<label for="course-descr" class="control-label">Description</label>
					</div>
					<div class="col-sm-4">
						<%= f.text_area :description, :rows => 2, :class => "form-control" %>
					</div>
					<div class="col-sm-2">
						<label for="trainer-bio" class="control-label">Biography of Trainer</label>
					</div>
					<div class="col-sm-4">
						<%= f.text_area :trainer_biography, :rows => 2, :class => "form-control" %>
					</div>
				</div>
				<div class="seperator10"></div>
				<div class="row">
					<div class="col-sm-2">
						<label for="course-logo" class="control-label">Course Logo</label>
					</div>
					<div class="col-sm-4">
							<span class="btn green fileinput-button">
								<i class="fa fa-plus"></i>
								<span>Upload Logo</span>
								<%= f.file_field :image %>
							</span>
					</div>
					<%= f.fields_for :channel_course_permissions do |course_permission_form| %>
						<%= render 'course_permission_form', :f => course_permission_form %>
					<% end %>
				</div>
				<div class="seperator10"></div>
				<div class="row">
					<%= render 'course_subscription_form', :f => f %>
				</div>
			</div>
		</div>
		<% index += 1 %>
	</div>
<% end %>