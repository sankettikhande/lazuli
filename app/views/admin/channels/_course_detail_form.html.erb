<% index = 3 %>
<%= course_form.fields_for :courses do |f| %>
	<div class="panel panel-default">
		<div class="panel-heading">
			<div class="panel-title">
					<div class="row">
						<a class="accordion-toggle col-sm-11" data-toggle="collapse" data-parent="#channel_accordion" href="#collapse_<%= !f.options[:child_index].nil? ? f.options[:child_index] : index %>">
						<h5>Course Details</h5></a>
						<%= f.link_to_remove raw("<button class='btn'><i class='fa fa-ban'></i></button>"), :class => "col-sm-1" %>
						<%#= f.link_to_remove "", :class => "col-sm-1 fa fa-ban btn-grey remove_course" %>
					</div>
			</div>
		</div>
		<div id="collapse_<%= !f.options[:child_index].nil? ? f.options[:child_index] : index %>" class="panel-collapse collapse">
			<div class="panel-body form-group">
				<div class="row">
					<div class="col-sm-2">
						<label for="course-name" class="control-label">Course Name</label>
					</div>
					<div class="col-sm-4">
						<%= f.text_field :name, :class => "form-control" %>
					</div>
					<div class="col-sm-2">
						<label for="trainer-name" class="control-label">Name of Trainer</label>
					</div>
					<div class="col-sm-4">
						<%= f.text_field :trainer_name, :class => "form-control" %>
					</div>
				</div>
				<div class="seperator10"></div>
				<div class="row">
					<div class="col-sm-2">
						<label for="course-descr" class="control-label">Description</label>
					</div>
					<div class="col-sm-4">
						<%= f.text_area :description, :rows => 2, :class => "form-control" %>
					</div>
					<div class="col-sm-2">
						<label for="trainer-bio" class="control-label">Biography of Trainer</label>
					</div>
					<div class="col-sm-4">
						<%= f.text_area :trainer_biography, :rows => 2, :class => "form-control" %>
					</div>
				</div>
				<div class="seperator10"></div>
				<div class="row">
					<div class="col-sm-2">
						<label for="course-logo" class="control-label">Course Logo</label>
					</div>
					<div class="col-md-4">
					  <div class="fileupload fileupload-new" data-provides="fileupload">
						<span class="btn blue btn-file">
						<span class="fileupload-new"><i class="fa fa-paper-clip"></i> Upload Logo</span>
						<span class="fileupload-exists"><i class="fa fa-undo"></i> Change</span>
						<%= f.file_field :image %>
						</span>
						<span class="fileupload-preview" style="margin-left:5px;"></span>
						<a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
					 </div>
					</div>
					<%= f.fields_for :channel_course_permissions do |course_permission_form| %>
						<%= render 'course_permission_form', :f => course_permission_form %>
					<% end %>
				</div>
				<div class="seperator10"></div>
				<div class="row">
					<%= render 'course_subscription_form', :f => f %>
				</div>
			</div>
		</div>
		<% index += 1 %>
	</div>
<% end %>