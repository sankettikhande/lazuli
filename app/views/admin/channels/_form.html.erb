<%= form_for [:admin, @channel], :html => { :multipart => true } do |f| %>
	<section class="container">
	  <div class="panel panel-default">
	  	<div class="panel-body">
	  		<%= render 'channel_error' %>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :name, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_field :name, :class => "form-control" %>
			   		</div>
      	  </div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
						<div class="col-md-2">
		   				<%= f.label :contact_number, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_field :contact_number, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :email, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_field :email, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :user_name, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_field :user_name, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator15"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :channel_type, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.select :channel_type, options_for_select([["Public","public"], ["Private","private"]], @channel.channel_type), :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :company_name, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_field :company_name, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :company_contact_name, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_field :company_contact_name, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :image, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.file_field :image, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :company_address, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_field :company_address, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :company_postal_address, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_field :company_postal_address, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :company_description, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_area :company_description, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="form-group">
		   			<div class="col-md-2">
		   				<%= f.label :company_number, :class => "control-label" %>
			   		</div>
			   		<div class="col-md-5">
			   			<%= f.text_field :company_number, :class => "form-control" %>
			   		</div>
		   		</div>
		   	</div>
		   	<%= f.hidden_field :admin_user_id, :value => current_user.id if current_user %>
		   	<%= f.hidden_field :created_by, :value => current_user.id if current_user %>
		   	<div class="seperator5"></div>
		   	<div class="row">
		   		<div class="col-md-12">
		   		<button type="submit" class="btn green">Save</button>
		   		</div>
		    </div>
	  	</div>
	  </div>
	</section>
<% end %>	