<div class="col-sm-2 width15">
	<label class="control-label"> Available Subscriptions<%= required_field %></label>
</div>
<div class="col-sm-10">
	<div class="checkbox-list">
		<% @subscriptions.each_with_index do |subscription, subs_index|%>
			<% cs = @course.course_first_subscription(subscription.id) %>
			<div class="col-sm-3">
				<% random = random_time %>
				<%= check_box_tag "course[course_subscriptions_attributes][#{cs.try(:id) || random}][subscription_id]", subscription.id, f.object.subscription_ids.include?(subscription.id), :class=>'require-one' %>
				<label><%= subscription.name %></label>
			</div>
				<div class="col-sm-2">
          <%= text_field_tag "course[course_subscriptions_attributes][#{cs.try(:id) || random}][subscription_price]", (subscription.is_trial_subscription? ? subscription.price : cs.try(:subscription_price)), :class=>'form-control subscription_price', :placeholder => 'Price' %>
         <%= hidden_field_tag "course[course_subscriptions_attributes][#{cs.try(:id)}][id]", cs.id if !cs.blank? %>
        </div>
		<% end %>
	</div>
</div>
<div class="seperator10"></div>