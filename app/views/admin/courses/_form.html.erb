<%= nested_form_for [:admin , @course], :html => {:class => 'formClass'} do |f| %>
<%= errors_for @course unless @course.errors.blank? %>
<div class="form-group">
	<section class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="row" id="course_form_header">
					<%= f.fields_for :channel_courses, :wrapper => false do |channel_courses_fields| %>
						<%= render 'channel' , :f => channel_courses_fields%>
					<% end %>
				</div>
			</div>
		</div>
	</section>
	<div class="seperator12"></div>
	<div class="row">
		<div class="col-sm-12">
			<div class="add-new-course form-group">
	     		<div class="panel panel-default">
 	     		<div class="panel-heading">
    	  			<h4 class="panel-title">
    	  				Course Details
    	  			</h4>
 	     		</div>
  	  		<div class="panel-body">
  	  			<div class="row">
    	  			<div class="col-sm-2">
    	  				<label for="crs-name" class="control-label">Course Name<%= required_field %></label>
    	  			</div>
    	  			<div class="col-sm-4">
    	  				<%=f.text_field 'name', :class => "form-control validate[required]" %>
    	  			</div>
    	  			<div class="col-sm-2">
    	  				<label for="name-trainer" class="control-label">Name of Trainer</label>
    	  			</div>
    	  			<div class="col-sm-4">
    	  				<%=f.text_field 'trainer_name', :class => "form-control"%>
    	  			</div>
  	  			</div>
  	  			<div class="seperator10"></div>
  	  			<div class="row">
    	  			<div class="col-sm-2">
    	  				<label for="crs-descr" class="control-label">Description</label>
    	  			</div>
    	  			<div class="col-sm-4">
    	  				<%=f.text_area 'description', :rows =>4, :class => "form-control"%>
    	  			</div>
    	  			<div class="col-sm-2">
    	  				<label for="name-trainer" class="control-label">Biography of Trainer</label>
    	  			</div>
    	  			<div class="col-sm-4">
    	  				<%=f.text_area 'trainer_biography', :rows =>4, :class => "form-control"%>
    	  			</div>
  	  			</div>
  	  			<div class="seperator10"></div>
						<div class="row">
							<div class="col-sm-2">
								<label for="course-logo" class="control-label">Course Logo</label>
							</div>
							<div class="col-md-4">
							  <div class="fileupload fileupload-new" data-provides="fileupload">
								<span class="btn blue btn-file">
								<span class="fileupload-new"><i class="fa fa-paper-clip"></i> Upload Logo</span>
								<span class="fileupload-exists"><i class="fa fa-undo"></i> Change</span>
								<%= f.file_field :image %>
								</span>
								<span class="fileupload-preview" style="margin-left:5px;"></span>
								<a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
							 </div>
							</div>
							<%= f.fields_for :channel_course_permissions do |channel_course_permissions_fields| %>
								<%= render 'course_permission' , :f => channel_course_permissions_fields%>	
							<% end %>
						</div>
						<div class="seperator10"></div>
						<div class="row">
							<%= render 'course_subscription', :f => f %>
						</div>
	  			</div>
  			</div>
			</div>
		</div>
		<div class="col-sm-2"></div>
	</div>
	<div class="seperator5"></div>
	<div class="row">
		<div class="col-md-12">
			<%=f.submit 'save', :class => "btn green"%>
		</div>
	</div>
	<% end %>
</div>

<%= javascript_include_tag "admin/app_functions/jquery_validation.js"%>