<% if params[:subscription_id] %>
	<%= options_for_select(@course_subscriptions.collect {|s| [ "#{s.name}- #{s.calculated_days} days", s.id, {'data-calculated_days' => s.calculated_days} ] }) %>
<% elsif @is_trial_subscription.blank? %>
	$('.trial_subscription').hide()
<% else %>
	$('.trial_subscription').show()
<% end %>

