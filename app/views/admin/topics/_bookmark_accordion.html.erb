<div class="panel panel-default fields">
	<div class="panel-heading">
		<div class="panel-title">
				<div class="row">
					<a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapse_<%= index %>">
					<div class="col-sm-8"><h5><%= f.object.title %></h5></div></a>
					<div class="col-sm-2 text-right"><h5>Sequence Number</h5></div>
					<div class="col-sm-1">
						<%= f.text_field "Sequence", :class => "form-control", :value => index + 1, :disabled => true%>
					</div>
					
					<div class="col-sm-1 nopadding">
						<div class="btn-group nopadding">
							<div class="col-sm-6"></div>
							<a class="accordion-toggle col-sm-6 btn-grey" data-toggle="collapse" data-parent="#accordion1" href="#collapse_<%= index %>"><button class="btn" id="extend_button"><i class="fa fa-chevron-down"></i></button>
							</a>
						</div>
					</div>
					
				</div>
		</div>
	</div>
	<div id="collapse_<%= index %>" class="panel-collapse collapse">
		<div class="panel-body form-group">
			<div class="row">
				<div class="col-sm-2">
					<label class="control-label"> Starting At<%#= required_field %></label>
				</div>
				<div class="col-sm-3">
					<%= f.text_field :time, :class => "form-control", :disabled => true%>
				</div>
				<div class="col-sm-2 col-sm-offset-1">
					<label class="control-label"> Ending At </label>
				</div>
				<div class="col-sm-4">
					<%= f.text_field :ending_at, :class => "form-control", :disabled => true, :placeholder=>"Till End"%>
				</div>
			</div>
			<div class="seperator5"></div>
			<div class="row">
				<div class="col-sm-2">
					<label class="control-label"> Title <%= required_field %></label>
				</div>
				<div class="col-sm-3">
					<%= f.text_field :title, :class => "form-control validate[required]"%>
				</div>
				<div class="col-sm-2 col-sm-offset-1">
					<label class="control-label">Description</label>
				</div>
				<div class="col-sm-4">
					<%= f.text_area :description, :class => "form-control", :rows => 1 %>
				</div>
			</div>
			<div class="seperator5"></div>
		</div>
	</div>
</div>