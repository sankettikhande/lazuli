<form method="post" action="/post_email" accept-charset="UTF-8">
	<div id="bookmark" style="max-height:100px;overflow:auto;">
		<table>
			<tr>
				<th>Time</th>
				<th> Bookmark </th>
				<th></th>
			</tr>
			<tr>
		  	<td>
		  		<%= hidden_field_tag 'id', f.object.videos.first.id %>
		  		<input type="text" name="bookmark[]time" class="form-control" value="0.00">
		  	</td>
		  	<td>
		  		<input type="text" name="bookmark[]description" class="form-control">
		  	</td>
		  	<td>
		  		<a onclick="$(this).parent().parent().hide();javascript:void(0)" class="link">Remove</a>
		  	</td>
		  </tr>
		</table>
	</div>
</form>