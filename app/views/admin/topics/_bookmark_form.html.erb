<%= form_tag('/admin/topics/bookmark', :remote => true, :id => "bookmark_form") do  %>
	<div class="row">
	  <div class="col-xs-2">
	   <label class="control-label" for="bkmrk-time">Time</label>
	  </div>
	  <div class="col-xs-2">
	   <label class="control-label">Title</label>
	  </div>
	  <div class="col-xs-5">
	   <label class="control-label" for="bkmrk-descr">Description</label>
	  </div>
	</div>
	<% video = topic.videos.first %>
	<%= hidden_field_tag 'id', video.id %>
	<% if video.bookmarks.nil? || video.bookmarks.blank?%>
		<div class="row">
		  <div class="col-xs-2">
		   <input type="text" name="bookmark[]time" class="form-control" value="00:00">
		  </div>
		  <div class="col-xs-2">
		   <input type="text" name="bookmark[]title" class="form-control" placeholder="Please enter bookmark title">
		  </div>
		  <div class="col-xs-6">
		   <textarea name="bookmark[]description" class="form-control" placeholder="Describe this bookmark" rows="1"></textarea>
		  </div>
		  <div class="col-xs-1">
		   <button type="button" class="btn btn-trans" title="Remove" onclick="$(this).parent().parent().remove();javascript:void(0);"><i class="fa fa-minus-circle"></i></button>
		  </div>
		</div>
		<div class="seperator5"></div>
	<% else %>
		<% video.bookmarks.each do |bookmark| %>
			<div class="row">
			  <div class="col-xs-2">
			  <input type="hidden" name='bookmark[]id' class="form-control" value="<%= bookmark.id %>">
			   <input type="text" name="bookmark[]time" class="form-control" value="<%= bookmark.time %>">
			  </div>
			  <div class="col-xs-2">
			   <input type="text" name="bookmark[]title" class="form-control" value="<%= bookmark.title %>">
			  </div>
			  <div class="col-xs-6">
			   <textarea name="bookmark[]description" class="form-control" rows="1"><%= bookmark.description %></textarea>
			  </div>
			  <div class="col-xs-1">
			   <button type="button" class="btn btn-trans" title="Remove" onclick="$(this).parent().parent().remove();javascript:void(0);"><i class="fa fa-minus-circle"></i></button>
			  </div>
			</div>
			<div class="seperator5"></div>
		<% end %>
	<% end %>
<% end %>