 	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= nested_form_for [:admin, @user] do |f| %>
					<% if @user.errors.any? %>
					  <ul style='color: red;padding-left:15px;'>
					    <% @user.errors.full_messages.each do |msg| %>
					      <li><%= msg %></li>
					    <% end %>
					  </ul>
					<% end %>
						<div class="row-align form-group">
				    	<div class="col-md-2">
				    		<label for="uname">Actual Name:</label>
				    	</div>
				    	<div class="col-md-4">
			    		  <%= f.text_field 'actual_name', :class => 'form-control' %>
				    	</div>
				    </div>
					 	<div class="row form-group">
				    	<div class="col-md-2">
				    		<label for="uname">User Name:</label>
				    	</div>
				    	<div class="col-md-4">
			    		  <%= f.text_field 'name', :class => 'form-control' %>
				    	</div>
				    </div>
				    <div class="row-align form-group">
				    	<div class="col-md-2">
				    		<label for="emailID">Email ID:</label>
				    	</div>
				    	<div class="col-md-4">
			    			<%= f.text_field 'email', :class => 'form-control' %>
				    	</div>
				    </div>
				    <div class="row form-group">
				    	<div class="col-md-2">
				    		<label for="emailID">Phone Number:</label>
				    	</div>
				    	<div class="col-md-4">
			    			<%= f.text_field 'phone_number', :class => 'form-control' %>
				    	</div>
				    </div>

				    <div class="row col-md-13">
				    	<div class="col-md-6">	
						    <div class="row form-group">
						    	<div class="col-md-4">
						    		<label for="emailID">Company Name:</label>
						    	</div>
						    	<div class="col-md-8">
					    			<%= f.text_field 'company_name', :class => 'form-control' %>
						    	</div>
						    </div>
						    <div class="row form-group">
						    	<div class="col-md-4">
						    		<label for="emailID">Password:</label>
						    	</div>
						    	<div class="col-md-8">
					    			<%= f.password_field 'password', :class => 'form-control' %>
						    	</div>
						    </div>
					    </div>
					    <div class="col-md-6">
						    <div class="row form-group">
						    	<div class="col-md-4">
						    		<label for="emailID">Business/Personal Address:</label>
						    	</div>
						    	<div class="col-md-8">
					    			<%= f.text_area 'address', :class => 'form-control', :size => '10x3' %>
						    	</div>
						    </div>
					    </div>
					  </div>  
				   <!--  <div class="row">
				    	<div class="col-md-3">
				    		<label for="emailID">Confirm Password </label>
				    	</div>
				    	<div class="col-md-9">
			    			<%#= f.password_field 'password_confirmation', :class => 'form-control' %>
				    	</div>
				    </div> -->
				  	<div id="user_channels">
				  	<%= f.fields_for :user_channel_subscriptions do |uc_form| %>
				  		<%= render 'user_channel_subscription_fields', :f => uc_form %>
				  	<% end %>	
				  	</div>
				    <div class="row form-group">
				    	<div class="col-md-3"></div>
				    	<div class="col-md-9">
				    		<a href="#"><i class='fa fa-3x fa-plus'></i><a/>
				    		<%= f.link_to_add "Add another course", :user_channel_subscriptions, :data => { :target => "#user_channels" }%>
				    	</div>
				    </div>
				    <div class="seperator5"></div>
				    <div class="row form-group">
				    	<div class="col-md-3"></div>
				    	<div class="col-md-9">
				    		<%= f.submit 'Save', :class => 'btn green' %>
				    	</div>
				    </div>
			    <% end %> 
			  </div>  
			</div> 
		</div>
	</div>

	<style type="text/css">
		.row-align {
			margin-left: -15px;
			margin-right: -15px;
		}
	</style>