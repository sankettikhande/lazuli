 	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">
				<div class="panel-body">
					<%= nested_form_for [:admin, @user], :html => {:id => 'user_form', :remote => true} do |f| %>
					<div id='error_messages'></div>
					<%= render 'user_info', :f => f %>
				  	<div id="user_channels">
				  	<%= f.fields_for :user_channel_subscriptions do |uc_form| %>
				  		<%= render 'user_channel_subscription_fields', :f => uc_form %>
				  	<% end %>	
				  	</div>
				    
				    <div class="seperator5"></div>
				    <div class="row form-group">
				    	<div class="col-md-3"></div>
				    	<div class="col-md-1">
				    		<%= f.submit 'Save', :class => 'btn green' %>
				    	</div>
				    	<div class="col-md-0">
				    		<%= f.link_to_add raw_field('fa fa-3x fa-plus', "Add a Course" ), :user_channel_subscriptions, :data => { :target => "#user_channels" }, :class => 'btn green' %>
				    	</div>
				    </div>
			    <% end %> 
			  </div>  
			</div> 
		</div>
	</div>

	<style type="text/css">
		.row-align {
			margin-left: -15px;
			margin-right: -15px;
		}
	</style>
<%= javascript_include_tag 'admin/app_functions/users' %>