<div class="row">
  <a href="/admin/users/new"><button type="button" class="btn btn-default btn-success pull-right"><i class="fa fa-3x fa-plus"></i> Add new user
  </button></a>
</div>
<div class="row">
  <div class="seperator5"></div>
  <div class="portlet-body flip-scroll">
    <table class="table table-bordered table-striped table-condensed flip-content table-hover" id="sample_1">
      <thead class="flip-content">
        <tr>
            <th>Username</th>
            <th>Email ID<i class="fa fa-3x fa-filter pull-right"></i></th>
            <th>Courses Subscribed for<i class="fa fa-3x fa-filter pull-right"></i></th>
            <th>Channels Subscibed to<i class="fa fa-3x fa-filter pull-right"></i></th>
            <th>Type of Subscription</th>
            <th>Subscription Expiring on</th>
            <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <% user.user_channel_subscriptions.each do |user_channel| %>
          <tr>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user_channel.course.try(:name) %></td>
            <td><%= user_channel.channel.try(:name) %></td>
            <td><%= user_channel.subscription.name %></td>
            <td><%= user_channel.expiry_date %></td>
            <td><a href="/admin/users/<%= user.id %>/edit"><i class="fa fa-3x fa-edit"></i></a><a href="/admin/users/<%= user.id %>" data-method="delete" data-confirm="Are you sure you want to delete?"><i class="fa fa-3x fa-ban pull-right"></i></a></td>
          </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>