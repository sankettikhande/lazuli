	<div class="form-group">
  	<div class="panel panel-default">
  		<div class="panel-body">
  			<div class="form-group">
          <%= nested_form_for @user, :url => create_bulk_admin_users_path, :html => {:id => 'multiple_user_form'} do |f| %>
  					<div id='error_messages'></div>
  	  			<div class="row">
	  				<div class="col-md-12">
						  <div class="fileupload fileupload-new" data-provides="fileupload">
							<span class="btn blue btn-file">
							<span class="fileupload-new"><i class="fa fa-paper-clip"></i> Upload File</span>
							<span class="fileupload-exists"><i class="fa fa-undo"></i> Change</span>
							<%= f.file_field :file %>
							</span>
							<span class="fileupload-preview" style="margin-left:5px;"></span>
							<a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
						 </div>
					 </div>
				</div>
				 <div><%= link_to "Click here", '/multiple_user.xls' %> to download sample excel file.<br> (Note: Please upload the file with all cells in the text format. Refer the sample file.) </div>
	  			<div class="seperator15"></div>
  				<div class="seperator15"></div>
  				<div class="row">
  					<div class="col-sm-10">
		  				<div class="row">
		  					<div class="col-sm-3">
		  						<label class="control-label">Company Name</label>
		  					</div>
		  					<div class="col-sm-3">
		  						<%= f.text_field 'company_name', :class => "form-control" %>
		  					</div>
		  					<div class="col-sm-6"></div>
		  				</div>	  				
  					</div>
  					<div class="col-sm-2"></div>
  				</div>
  					<div id="user_channels">
						  	<%= f.fields_for :user_channel_subscriptions do |uc_form| %>
						  		<%= render 'user_channel_subscription_fields', :f => uc_form, :index => (!uc_form.options[:child_index].nil? ? uc_form.options[:child_index] : 0) %>
						  	<% end %>	
					  	</div>
  				<div class="seperator15"></div>
  				<div class="row form-group">
				    	<div class="col-md-3"></div>
				    	<div class="col-md-1 width14">
				    		<%= f.link_to_add raw_field('fa fa-plus', "Add a Course" ), :user_channel_subscriptions, :data => { :target => "#user_channels" }, :class => 'btn green' %>
				    	</div>
				    	<div class="col-md-1">
				    		<%= f.submit 'Save', :class => 'btn green' %>
				    	</div>
				    	<div class="col-md-0">
							  <%= link_to "Cancel", admin_users_path, :data => {'no-turbolink' => true}, :class => 'btn default' %>
							</div>
				    </div>
  				<% end %>	
				</div> <!-- form-group class ends -->
			</div>
		</div>
	</div>
<style type="text/css">
		.row-align {
			margin-left: -15px;
			margin-right: -15px;
		}
	</style>

<%= javascript_include_tag 'admin/jquery.form.js' %>
<%= javascript_include_tag 'admin/app_functions/users' %>

<script type="text/javascript">
	$('#multiple_user_form').ajaxForm();
  </script>
