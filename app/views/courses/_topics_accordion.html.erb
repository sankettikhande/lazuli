<div class="col-xs-12 col-sm-5 col-md-4 sidebar-offcanvas" id="sidebar" role="navigation">
  <div class="course-menu">
    <div class="pull-left"><h5><a href="#"><%= @course.name %></a></h5></div>
    <div class="pull-right">
    </div>
    <div class="clearfix"></div>
    <ul class="parent-course-menu" id="accordion" >
      <% @course.topics.published.each_with_index do |topic, topic_index| %>
        <li class="<%= is_active(topic, topic_index) %>" >
          <a href="#topic-<%= topic_index %>" data-toggle="collapse" data-parent="#accordion">
            <%= topic.title %>
          </a>
          <ul id="topic-<%= topic_index %>" class="child-course-menu collapse <%= is_accordion(topic, topic_index) %>">
            <% topic.videos.published.each_with_index do |video, video_index| %>
              <li class="<%= is_active_video(video) %>">
                <% if cannot? :show, video %>
                <div id='subscription_modal' data-toggle="modal" data-target="#subscription_confirm">
                  <span>
                    <%= image_tag("/assets/frontend/lock.png") %>
                  </span>
                  <a href="#"> <%= video.title.truncate(40) %>
                    <span><%= format_duration(video.vimeo_data) %></span>
                  </a>
                </div>
                <% else %>
                <a href="<%= course_topic_video_url(@course.id, video.topic_id, video.id) %>"> <%= video.title.truncate(40) %>
                  <span><%= format_duration(video.vimeo_data) %></span>
                </a>
                <% end %>
              </li>
            <% end %>
          </ul>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="modal fade" id="subscription_confirm">
  <div class="modal-dialog">
    <div class="modal-content content1">
      <div class="modal-header">
        <a class="close" data-dismiss="modal">Ã—</a>
        <h3>Access Denied!</h3>
      </div>
      <div class="modal-body">
        <h4>Please subscribe to unlock the video</h4>
      </div>
      <div class="modal-footer">
        <a href="#" class="btn btn-primary subscription_now">Subscribe Now</a>
       <!--  <a data-dismiss="modal" class="btn btn-primary">Try Now</a> -->
      </div>
    </div>
  <div class="modal-content content2" hidden>
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Subscribe Course</h4>
      </div>
      <%= form_tag subscribe_course_url(@course.id), :remote => true do %>
        <%= hidden_field(:course_subscription, :channel_id, :value => @course.channel_id) %>
        <%= hidden_field(:course_subscription, :course_id, :value => @course.id) %>
        <%= hidden_field_tag 'video_id', params[:video_id] %>
        <div class="modal-body">
          <h5>Course Name : <a href="#"><%= @course.name %></a></h5>
          <h5>Available Subscriptions</h5>
          <% @course.course_subscriptions.each do |cs| %>
            <p style="margin-left: 50px;"><%=radio_button :course_subscription, :subscription_id, cs.subscription.id, :required => true %> <%= cs.subscription.name %></p>
            <%= hidden_field_tag "duration_#{cs.subscription.id}", cs.subscription.calculated_days %>
          <% end %>
        </div>
        <div class="modal-footer">
          <a data-dismiss = 'modal' class="btn btn-default cancel_button">Cancel</a>
          <%= submit_tag "Subscribe", :class => "btn btn-primary" %>
        </div>
      <% end %>
    </div>
    </div>
</div>
