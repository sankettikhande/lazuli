<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title">Sign Up</h4>
    </div>
    <div class="modal-body">
      <%= form_for(resource, :as => resource_name, :remote => true, :url => registration_path(resource_name) , :html =>{:class=>'deviseForm'}) do |f| %>
        <div class='error'></div>
        <div class="row">
        	<div class="col-xs-12 col-sm-6 form-group">
        		<label class="control-label">Full Name</label>
        		<%= f.text_field :actual_name, :autofocus => true, :class => 'form-control', :placeholder => 'First Name & Last Name', :id=>"user-actual-name" %>
        	</div>
        	<div class="col-xs-12 col-sm-6 form-group">
        		<label class="control-label">Preferred User Name</label>
        		<%= f.text_field :name, :class => 'form-control', :placeholder => 'Preferred User Name',:id => "user-name" %>
        	</div>									        	
        </div>
        <div class="row">
        	<div class="col-xs-12 col-sm-6 form-group">
        		<label class="control-label">Company&nbsp;Name</label>
        		<%= f.text_field :company_name, :class => 'form-control', :placeholder => 'Place where you work', :id => "user-company-name" %>
        	</div>
        	<div class="col-xs-12 col-sm-6 form-group">
        		<label class="control-label">Contact Number</label>
        		<%= f.text_field :phone_number, :class => 'form-control', :placeholder => 'Numbers only', :id => "user-company-name" %>
        	</div>									        	
        </div>
        <div class="row">
        	<div class="col-xs-12 form-group">
        		<label class="control-label">Email Address</label>
        		<%= f.email_field :email, :class => 'form-control', :placeholder => 'Valid Email Address', :id => "user-email-add" %>
        	</div>
        </div>
        <div class="row">
        	<div class="col-xs-12 col-sm-6 form-group">
        		<label class="control-label">Password</label>
        		<%= f.password_field :password, :class => 'form-control', :placeholder => 'Minimum 8 characters', :id => "user-new-pswd" %>
        	</div>
        	<div class="col-xs-12 col-sm-6 form-group">
        		<label class="control-label">Confirm Password</label>
        		<%= f.password_field :password_confirmation, :class => 'form-control', :placeholder => 'Same password', :id => "user-cnfrm-pswd" %>
        	</div>
        </div>
        <div class="row">
        	<div class="col-xs-12">
        		<label class="control-label">Address</label>
        		<%= f.text_area :address, :class => 'form-control', :placeholder => 'Complete address', :id => "user-address", :rows => 3 %>
        	</div>
        </div>
        <div class="seperator10"></div>
        <div class="row">
        	<div class="col-xs-12 text-right">
						<button type="submit" class="btn btn-success">Sign Up</button>
		        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
        	</div>
        </div>
      <% end %>
    </div>
    <div class="modal-footer">
	<ul class="social-login-btns text-center">
		<li><%= link_to raw("<i class='fa fa-facebook'></i>"), user_omniauth_authorize_path(:facebook), :class => "btn btn-social-icon btn-facebook", :title => "Login Via Facebook" %></li>
               <li><%= link_to raw("<i class='fa fa-google-plus'></i>"), user_omniauth_authorize_path(:google_oauth2), :class => "btn btn-social-icon btn-google-plus", :title => "Login Via Google" %></li>
               <li><%= link_to raw("<i class='fa fa-linkedin'></i>"), user_omniauth_authorize_path(:linkedin), :class => "btn btn-social-icon btn-linkedin", :title => "Login Via Linkedin" %></li>
           </ul>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

 <%= javascript_include_tag "application/main_app/devise.js" %>