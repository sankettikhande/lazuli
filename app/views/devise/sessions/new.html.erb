				<div class="seperator10 visible-xs"></div>
					<article class="homepage-modals">
						<div class="modal" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="signup-modal" aria-hidden="true" data-backdrop="true">
						  <%= render :template => '/devise/registrations/new' %>
						</div><!-- /.modal -->

						<div class="modal" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="login-modal" aria-hidden="true" data-backdrop="true">
						  <div class="modal-dialog">
						    <div class="modal-content">
						      <div class="modal-header">
						        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
						        <h4 class="modal-title">Login</h4>
						      </div>
						      <div class="modal-body">
						      	<%= form_for(resource, :as => resource_name, :remote => true, :url => session_path(resource_name)) do |f| %>
				    					<div id='error'></div>
							        <div class="row">
							        	<div class="col-xs-12">
							        		<label class="control-label">Email Address</label>
							        		<%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Enter your email address', :id => "user-id-login" %>
							        	</div>
							        </div>
							        <div class="row">
							        	<div class="col-xs-12">
							        		<label class="control-label">Password</label>
							        		<%= f.password_field :password, :class => 'form-control', :placeholder => 'Enter your password', :id => "user-id-password" %>
							        	</div>
							        </div>
							        <div class="seperator5"></div>
							        <div class="row">
							        	<div class="col-xs-12 col-sm-8">
							        		<div class="checkbox">
							        			<label><%= f.check_box :remember_me %>  Remember me</label>
													</div>
								        </div>
							        	<div class="col-xs-12 col-sm-4">
							        		<%= link_to "Forgot your password ?", new_password_path(resource_name) %>
							        	</div>
							        </div>
							        <div class="seperator10"></div>
							        <div class="row">
							        	<div class="col-xs-12 text-right">
									        <button type="submit" class="btn btn-success">Login</button> 
									        <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
							        	</div>
							        </div>
						        <% end %>
						      </div>
						      <div class="modal-footer">
								<ul class="social-login-btns text-center">
									<li><%= link_to raw("<i class='fa fa-facebook'></i>"), user_omniauth_authorize_path(:facebook), :class => "btn btn-social-icon btn-facebook", :title => "Login Via Facebook" %></li>
									<li><%= link_to raw("<i class='fa fa-google-plus'></i>"), user_omniauth_authorize_path(:google_oauth2), :class => "btn btn-social-icon btn-google-plus", :title => "Login Via Google" %></li>
									<li><%= link_to raw("<i class='fa fa-linkedin'></i>"), user_omniauth_authorize_path(:linkedin), :class => "btn btn-social-icon btn-linkedin", :title => "Login Via Linkedin" %></li>
									</ul>
						      </div>
						    </div><!-- /.modal-content -->
						  </div><!-- /.modal-dialog -->
						</div><!-- /.modal -->

