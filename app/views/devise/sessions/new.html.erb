<section>
	<div class="row"> <!-- Row 1 -->
		<div class="col-sm-6 pull-right">
			<div class="content-right">	
				<div class="row">
					<div class="col-xs-12">
						<div class="user-log-form glass-white">
							<%= form_for(resource, :as => resource_name, :remote => true, :url => session_path(resource_name)) do |f| %>
	    					<div><%= flash[:alert]  ||= flash[:notice] %></div>
	    					<div id='error'></div>
		  					<div class="row"> <!-- row 2 -->
	  							<div class="col-sm-12">
	  								<div class="row">
	  									<div class="col-md-6">
												<label for="user-id-login" class="control-label text-left">Email Address</label>
												<%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Enter your email address', :id => "user-id-login" %>
	  									</div>
	  									<div class="col-md-6">
												<label for="user-id-password" class="control-label">Password</label>
												<%= f.password_field :password, :class => 'form-control', :placeholder => 'Enter your password', :id => "user-id-password" %>
	  									</div>
	  								</div>
										<div class="row">
											<div class="col-xs-5 col-sm-6 nopadding-right">
				                <label class="checkbox-inline">
				                	<%= f.check_box :remember_me %>  Remember me
				                </label>
				              </div>
											<div class="col-xs-7 col-sm-6 nopadding-right">
											 <%= link_to "Forgot your password ?", new_password_path(resource_name) %>
											</div>
		  							</div>
		  							<div class="seperator5"></div>
	  								<div class="row">
	  									<div class="col-sm-4">
												<button type="submit" class="btn btn-success btn-block">Login</button>  
	  									</div>
	  								</div>
		 							</div>
	  						</div> <!-- row 2 ends -->
	  					<% end %>

  						<div class="seperator5"></div>
  						<div class="row">
  							<div class="col-md-4">
  								<div class="social-login">
  									<%= link_to raw("<i class='fa fa-facebook'></i>Facebook"), user_omniauth_authorize_path(:facebook), :class => "btn btn-social btn-block btn-facebook" %>
									</div>
  							</div>
  							<div class="col-md-4">
  								<div class="social-login">
  									<%= link_to raw("<i class='fa fa-google-plus'></i>Google"),user_omniauth_authorize_path(:google_oauth2), :class => 'btn btn-social btn-block btn-google-plus' %>
									</div>
  							</div>
  							<div class="col-md-4">
  								<div class="social-login">
  									<%= link_to raw("<i class='fa fa-linkedin'></i>Linkedin"),user_omniauth_authorize_path(:linkedin), :class => 'btn btn-social btn-block btn-linkedin' %>
									</div>
  							</div>
  						</div>
						</div>
					</div>
