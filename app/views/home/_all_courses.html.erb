<div class="row">
  <div class="col-sm-12">
    <h4>All Courses</h4>
    <div class="courses-list-box">
      <% @courses.each do |course| %>
        <div class="courses-list">
          <div class="row">
            <div class="col-xs-5 col-sm-2">
              <div class="course-logo-img">
                <a href="#">
                  <%= link_to(image_tag(course_thumbnail_image(course), :alt => "Image", :class => "img-responsive center-block" ), course_video_path(course.id)) %>
                </a>
              </div>
            </div>
            <div class="col-xs-7 col-sm-8">
               <ul class="list-content">
                  <li class="title">
                    <%= link_to(course.name.titleize, course_video_path(course.id)) %>
                  </li> 
                  <li class="descr hidden-xs course_descrip_landing">
                    <%= course.description %>
                  </li>
                  <% unless current_user.is_admin? %>
                    <li class="subs-date">
                      <% unless current_user.watchable_course?(course.id) %>
                        <a href="#">Subscription Expired</a>
                        <span>
                          <a href="#">Renew Subscription</a>
                        </span>
                      <% end %>
                    </li>
                  <% end %>
                </ul>
            </div>
            <div class="hidden-xs col-sm-2">
              <div class="course-featured-video">
                <%= image_tag(course.channel.image.url, :alt => "Image", :class => "img-responsive" ) %>
              </div>
            </div>
          </div> <!-- row ends -->
        </div>  <!-- courses-list 1 ends -->
      <% end %>
    </div>
  </div> <!-- col-sm-12 Ends -->
</div> <!-- first row -->