<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>  
      <h4 class="modal-title">Contact Us</h4>    
    </div>
    <div class="modal-body">
       <%= form_for :contact_us, :remote => true, :url => contact_us_url do |f| %>
       <div class ="error"></div>     
      <div class="row">
        <div class="col-xs-12">
         <div class="row">
              <div class="col-xs-12 form-group">
                <label class="control-label">Name</label>
                <%= f.text_field :name, :autofocus => true, :class => 'form-control', :placeholder => 'Enter your name', :id => "contact_us_name" %>
              </div>
         </div>
         <div class="row">
              <div class="col-xs-12 form-group">
                <label class="control-label">Email</label>
                <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Enter your email address', :value => user_signed_in? ?  current_user.email : '', :disabled => user_signed_in? ? true :false%>
              </div>
         </div>
         <div class="row">
              <div class="col-xs-12 form-group">
                <label class="control-label">Subject/Title</label>
                <%= f.text_field :subject, :autofocus => true, :class => 'form-control', :placeholder => 'Enter your subject', :id => "contact_us_subject" %>
              </div>
         </div>
         <div class="row">
          <div class="col-xs-12">
            <div class="form-group">
              <label class="control-label">Message</label>
               <%= f.text_area :message, :class => 'form-control', :placeholder => 'Enter Your message', :rows => 3 %>             
            </div>
          </div>
        </div>                                                                                   
        </div>
      </div>
      <div class="seperator-10"></div>                                                          
        <div class="row">                    
          <div class="col-xs-12 text-center">
            <div class="form-group">
              <button type="submit" class="btn btn-success">Save</button>
              <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>                                
            </div>
          </div>
        </div>
        <% end %>                                                      
      </div>

  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
<%=javascript_include_tag "application/main_app/devise.js"%>