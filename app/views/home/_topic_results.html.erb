<div class="courses-list">
  <div class="row">
    <div class="col-xs-5 col-sm-2 col-md-2">
      <div class="course-logo-img">
        <a href="<%=channel_path(result.channel_id)%>"><%= image_tag(channel_thumbnail_image(result.channel,{:image_size => 'medium'}), :alt => "Image", :class => "img-responsive center-block" )%></a>
      </div>
    </div>
    <div class="col-xs-7 col-sm-8 col-md-8">
       <ul class="list-content">
          <li class="title">
            <ol class="breadcrumb">
              <li><a href="<%=list_of_course_path(result.course.id)%>"><%= result.course.name %></a></li>
              <li><a href="<%=course_topic_path(result.course.id,result.id)%>"><%= result.title %></a></li>
            </ol>
          </li>
          <li class="descr hidden-xs"><%= result.description %></li>
        </ul>
    </div>
    <div class="hidden-xs col-sm-2 col-md-2">
      <div class="course-featured-video">
        <%= link_to(image_tag(video_thumbnail_image(result.videos.first, {:medium => true}), :alt => "Image", :class => "img-responsive center-block video-thumbnail"),course_topic_video_path(result.course.id, result.id, result.videos.first.id)) %>
      </div>
    </div>
  </div> <!-- row ends -->
</div>