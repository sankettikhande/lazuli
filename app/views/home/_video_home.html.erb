<div class="col-sm-12">
  <div class="carousel slide home-carousel" id="myCarousel<%= topic_index %>" data-interval="false">
    <div class="carousel-inner home-carousel-inner">
      <% topic.videos.limit(6).each_with_index do |video, video_index| %>
        <div class="item <%= "active" if video_index.zero? %>">
          <div class="col-xs-6">
            <a href="<%= course_topic_video_url(video.topic.course_id, video.topic_id, video.id) %>">
              <%= image_tag(video_thumbnail_image(video), :alt => "Image", :class => "img-responsive center-block") %>
            </a>
          </div>
        </div>
      <% end %>
    </div>
    <div class="carousel-caption">
      <h4><%= topic.title.titleize %></h4>
    </div>
    <% if topic.videos.count >= 3 %>
      <a class="carousel-control left" href="#myCarousel<%= topic_index %>" data-slide="prev"><i class="fa fa-caret-left"></i></a>
      <a class="carousel-control right" href="#myCarousel<%= topic_index %>" data-slide="next"><i class="fa fa-caret-right"></i></a>
    <% end %>
  </div>
</div>