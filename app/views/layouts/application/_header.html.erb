<% if current_user %>
  <div class="navbar navbar-inverse navbar-fixed-top" id="lazuli-top-menu">
    <div class="container">
      <div class="row"> <!-- row 1  -->
        <div class="col-xs-4 col-sm-2 nopadding-right">
          <ul class="nav navbar-nav">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">Courses <b class="caret"></b></a>
                <ul class="dropdown-menu">
                  <li><a href="#">Excel</a></li>
                  <li><a href="#">Word</a></li>
                  <li><a href="#">Powerpoint</a></li>
                  <li class="divider"></li>
                  <li class="dropdown-header">Other</li>
                  <li><a href="#">Publisher</a></li>
                  <li><a href="#">Outlook</a></li>
                </ul>
              </li>
            </ul>
        </div>
        <div class="col-xs-6 col-sm-4 nopadding-left">
            <form class="navbar-form" role="search">
              <div class="input-group">
                <div class="input-group-btn">
                  <button class="btn btn-default"><i class="fa fa-search"></i></button>
                </div>
                <input type="search" class="form-control" placeholder="What do you want to learn?">
              </div>
            </form>
        </div>
        <div class="col-xs-1 col-sm-4 hidden-xs">
            <div class="lazuli-logo">
              <a href="#" class="navbar-brand"><img class="img-responsive" src="/assets/frontend/Lazuli-text.png" alt="Lazuli Logo"></a>
            </div>
        </div>
        <div class="col-xs-2 col-sm-2 dropdown text-right">
          <div class="btn-group margin-top-8 text-left">
            <button type="button" class="btn btn-dark dropdown-toggle hidden-xs" data-toggle="dropdown"><%= current_user.name %></button>
            <button type="button" class="btn btn-dark dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i></button>
            <ul class="dropdown-menu pull-right">
              <li>
                <a href="#">My Account</a>
              </li>
              <li>
                <%= link_to raw("<i class='fa fa-key'></i> Log Out"), destroy_user_session_path, :method => :delete %>
              </li>
            </ul>
          </div>
        </div>
      </div> <!-- row 1 ends -->
    </div>
  </div> <!-- navbar ends -->
<% else %>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to raw("<img src='/assets/frontend/lazuli-logo.png' alt='Lazuli' class='img-responsive center-block'>"), root_url %>
      </div>
      <div class="navbar-collapse collapse navbar-right hidden-xs header-menu">
        <ul class="nav navbar-nav">
          <li>
            <% if request.fullpath.include?("sign_in") %>
              <%= link_to raw("<i class='fa fa-pencil-square-o'></i> Signup"), new_registration_path(resource_name), :data => {"no-turbolink" => true}  %>
            <% else %>
              <%= link_to raw("<i class='fa fa-sign-in'></i> Sign in"), new_session_path(resource_name), :data => {"no-turbolink" => true} %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  </div>
<% end %>