<section class="fav-content" id="video_search_results">
	<div class="row">
		<div class="col-xs-12">
			<ul class="row">
				<% objects.each do |object| %>
					<li class="col-xs-12 col-sm-6 col-md-4">
						<ul class="box-record">
							<li class="box-title"><input type="checkbox" name="<%= params[:controller] %>_ids[<%= object.id %>]" class="user_checkbox">
								<span class="pull-right"><button type="button" class="btn-trans">&times;</button></span></li>
							<li class="box-details">
								<div class="row">
									<div class="col-xs-6 col-sm-5">
										<div class="item-thumb">
											<%= link_to(image_tag(video_thumbnail_image(object), :alt => "", :class => "img-responsive center-block")) %>
										</div>
									</div>
									<div class="col-xs-6 col-sm-7">
										<div class="row">
											<div class="col-xs-12">
												<div class="item-title"><a href="#">Microsoft Excel</a></div>
											</div>
										</div>
										<div class="row">
											<div class="col-xs-12">
												<div class="item-categ"><a href="#">Graphs</a></div>
											</div>
										</div>
										<div class="row">
											<div class="col-xs-12">
												<div class="item-descr"><a href="#">Creating a simple graph</a></div>
											</div>
										</div>
									</div>
								</div>
							</li>
						</ul>
					</li>
				<% end %>
			</ul>
		</div>
	</div>
</section>
<%= javascript_include_tag "application/main_app/user_option.js"%>