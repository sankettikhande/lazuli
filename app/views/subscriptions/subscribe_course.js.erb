<% if @subscription.errors.blank? %>
	$("#flash").css("padding-left","15px").css("color",'#008000').html("You are successfully subscribed to the course.").fadeOut(3000);
	$('.close').trigger('click');
	$("#subscription_modal").hide();
<% else %>
	$("#flash").css("padding-left","15px").css("color",'#FF0000').html("You have subscribed to this course.").fadeOut(3000);
	$('.close').trigger('click');
<% end %>