<div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">My Account</h4>
      </div>
      <div class="modal-body">
        <%= form_for :user, :remote => true, :url => user_url(current_user), :method => :put do |f| %>
        <div id='errors'></div>
        <div class="row">
          <div class="col-xs-12 col-sm-6">
          <div class="form-group">
             <label class="control-label">Full Name</label>
            <%= f.text_field :actual_name, :autofocus => true, :class => 'form-control', :placeholder => 'First Name & Last Name', :id=>"user-actual-name", :value => current_user.actual_name %>                            
          </div>
          </div>
          <div class="col-xs-12 col-sm-6">
            <div class="form-group">
              <label class="control-label">Username</label>
              <%= f.text_field :name, :class => 'form-control', :placeholder => 'User Name', :value => current_user.name %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <div class="form-group">
              <label class="control-label">Company Name</label>
              <%= f.text_field :company_name, :class => 'form-control', :placeholder => 'Place where you work', :id => "user-company-name", :value => current_user.company_name %>                              
            </div>
          </div>
          <div class="col-xs-12 col-sm-6">
            <div class="form-group">
              <label class="control-label">Contact</label>
              <%= f.text_field :phone_number, :class => 'form-control', :placeholder => 'Numbers only', :id => "user-company-name", :value => current_user.phone_number %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 col-sm-6">
            <div class="form-group">
              <label class="control-label">Email Address</label>
              <%= f.email_field :email, :autofocus => true, :class => 'form-control', :placeholder => 'Enter your email address', :id => "user-id-login", :value => current_user.email %>
            </div>
          </div>
          <div class="col-xs-12 col-sm-6">
            <div class="form-group">
              <label class="control-label">Password</label>
              <%= f.password_field :password, :class => 'form-control', :placeholder => 'Password' %>
            </div>
          </div>                           
        </div>
        <div class="row">
          <div class="col-xs-12">
            <div class="form-group">
              <label class="control-label">Address</label>
              <%= f.text_area :address, :class => 'form-control', :placeholder => 'Complete address', :id => "user-address", :rows => 3, :value => current_user.address %>
            </div>
          </div>
        </div><br>
        <div class="row">                    
          <div class="col-xs-12 text-right">
            <div class="form-group">
              <button type="submit" class="btn btn-success">Save</button>
              <button type="button" class="btn btn-danger" data-dismiss="modal" aria-hidden="true">Cancel</button>
            </div>
          </div>
        </div> 
        <% end %>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->