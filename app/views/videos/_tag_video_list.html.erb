 <%  videos.each do |video| %>
  <div class="courses-list">
    <div class="row">
      <div class="col-xs-5 col-sm-2 col-md-2">
        <div class="course-logo-img">
          <% if current_user.is_admin? || current_user.watchable_video?(video, video.topic.course_id)%>
            <a href="#">
              <%= image_tag(video_thumbnail_image(video, :medium => true), :alt => "Image", :class => "img-responsive center-block" )%>
            </a>
          <% else %>
            <a href="#">
              <%= link_to( image_tag(video_thumbnail_image(video, :medium => true), :alt => "Image", :class => "img-responsive center-block" ), subscribe_subscription_path(video.topic.course_id), {:remote => true, 'data-toggle' =>  "modal", 'data-target' => '#modal-window'}) %>
            </a>
          <% end %>
        </div>
      </div>
      <div class="col-xs-7 col-sm-8 col-md-8">
         <ul class="list-content">
            <li class="title">
              <ol class="breadcrumb">
                <li><a href="<%#= course_path(course.id)%>"><%= video.title %></a></li><li><%#= course.topics.first.title if course.topics.first %></li>
              </ol>
            </li>
            <li class="descr hidden-xs"><%= video.description %></li>
          </ul>
      </div>
      <div class="hidden-xs col-sm-2 col-md-2">
        <div class="course-featured-video">
          <%= image_tag(course_thumbnail_image(video.topic.course, {:image_size => "medium"}), :alt => "Image", :class => "img-responsive center-block video-thumbnail") %>
        </div>
      </div>
    </div> <!-- row ends -->
  </div>  <!-- courses-list 1 ends -->
<% end %>
<div><%= videos.count %> courses Found.</div>
<%= paginate videos, :remote => true %>

<%#= javascript_include_tag "application/main_app/tag_search.js"%>
<%#= javascript_include_tag "application/main_app/course.js"%>