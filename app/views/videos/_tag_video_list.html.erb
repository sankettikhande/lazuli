 <%  videos.each do |video| %>
  <div class="courses-list">
    <div class="row">
      <div class="col-xs-5 col-sm-2 col-md-2">
        <div class="course-logo-img">
          <%= link_to(image_tag(video.topic.channel.image.url, :alt => "Image", :class => "img-responsive center-block yellow-shadow" ), channel_url(video.topic.channel)) %>
        </div>
      </div>
      <div class="col-xs-7 col-sm-8 col-md-8">
         <ul class="list-content">
            <li class="title">
              <ol class="breadcrumb">
                <li>
                  <a href="<%= course_path(video.topic.course_id)%>"><%= video.course.name.truncate(35) %>
                  </a>
                </li>
                <li>
                  <a href="<%= course_topic_path(video.topic.course_id, video.topic_id)%>">
                    <%= video.topic.title.truncate(35) %>
                  </a>
                </li>
                <li>
                  <%= video.title.truncate(35) if video %>
                </li>
              </ol>
            </li>
            <li class="descr hidden-xs"><%= video.description %></li>
          </ul>
      </div>
      <div class="hidden-xs col-sm-2 col-md-2">
        <div class="course-featured-video">
            <a href="#">
              <%= link_to(link_image_tag(video), course_topic_video_url(video.topic.course_id, video.topic_id, video.id) )%>
            </a>
        </div>
      </div>
    </div> <!-- row ends -->
  </div>  <!-- courses-list 1 ends -->
<% end %>
<div><%= videos.count %> Videos Found.</div>
<%= paginate videos, :remote => true %>

<%= javascript_include_tag "application/main_app/tag_search.js"%>
<%= javascript_include_tag "application/main_app/course.js"%>