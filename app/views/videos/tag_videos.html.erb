<h4>Tag Search</h4>

<div class="col-xs-12 nopadding-left">
	<%= form_tag(tag_search_videos_path, method: "post", :remote => true, :html => {:class => 'navbar-form', :role => "search"}) do %>
	  <div class="input-group pull-left col-xs-4">
	  	<%= search_field_tag "search", "", class: "form-control", placeholder: "What do you want to learn?" %>
    </div>
    <div class="input-group-btn col-xs-2">
      <button class="btn btn-default">Search</button>
    </div>
  <% end %>
</div>

<div id="tag_video_list">
	<%= render 'tag_video_list', :videos => @videos %>
</div>